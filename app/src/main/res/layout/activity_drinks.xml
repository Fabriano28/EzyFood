<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Drinks"
    android:background="#FF9800"
    android:columnCount="3">

    <TextView
        android:id="@+id/DrinksTitle"
        android:layout_width="434dp"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_gravity="center_horizontal"
        android:background="#FFC107"
        android:fontFamily="@font/bungee"
        android:gravity="center_horizontal"
        android:text="Binus EzyFoody"
        android:textColor="#000000"
        android:textSize="34sp"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:id="@+id/toMyOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="My Order"
        android:layout_column="2"
        android:layout_row="1"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:textColor="#000000"
        app:backgroundTint="#FFC107"
        android:onClick="toMyOrder3"
         />

    <Button
        android:id="@+id/drink01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Air Mineral"
        android:layout_column="0"
        android:layout_row="2"
        android:onClick="drink1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:textColor="#000000"
        app:backgroundTint="#FFC107"
         />

    <Button
        android:id="@+id/drink02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jus Apel"
        android:layout_column="1"
        android:layout_row="2"
        android:onClick="drink2"
        android:textColor="#000000"
        app:backgroundTint="#FFC107"
         />

    <Button
        android:id="@+id/drink03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jus Mangga"
        android:layout_column="0"
        android:layout_row="3"
        android:onClick="drink3"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:textColor="#000000"
        app:backgroundTint="#FFC107"
         />

    <Button
        android:id="@+id/drink04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jus Alpukat"
        android:layout_column="1"
        android:layout_row="3"
        android:onClick="drink4"
        android:textColor="#000000"
        app:backgroundTint="#FFC107"
        />
</GridLayout>