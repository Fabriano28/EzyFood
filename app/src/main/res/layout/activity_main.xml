<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#FF9800"
    android:columnCount="3"
    >

    <TextView
        android:id="@+id/MainTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:text="Binus EzyFoody"
        android:textSize="34sp"
        android:fontFamily="@font/bungee"
        android:textColor="#000000"
        android:background="#FFC107"
        android:layout_marginBottom="10dp"

        />

    <Button
        android:id="@+id/toMyOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_row="1"
        android:layout_column="2"
        android:text="MyOrder"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="10dp"
        android:textColor="#000000"
        app:backgroundTint="#FFC107"
        android:onClick="toMyOrder"
        />

    <Button
        android:id="@+id/toDrinks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="fill"
        android:layout_gravity="center_horizontal"
        android:layout_row="2"
        android:layout_column="0"
        android:text="Drinks"
        android:onClick="toDrinks"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"
        />

    <Button
        android:id="@+id/ToSnacks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="fill"
        android:layout_gravity="center_horizontal"
        android:layout_row="2"
        android:layout_column="1"
        android:text="Snacks"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

    <Button
        android:id="@+id/toFoods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="fill"
        android:layout_gravity="center_horizontal"
        android:layout_row="3"
        android:layout_column="0"
        android:text="Foods"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"
        />

    <Button
        android:id="@+id/ToTopUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="fill"
        android:layout_gravity="center_horizontal"
        android:layout_row="3"
        android:layout_column="1"
        android:text="TopUP"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

</GridLayout>